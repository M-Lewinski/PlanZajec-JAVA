USE PlanZajec;

DELIMITER $$
DROP FUNCTION IF EXISTS `checkUser`$$
CREATE FUNCTION checkUser(login VARCHAR(30))
RETURNS BOOLEAN
DETERMINISTIC
BEGIN
DECLARE result int;
SELECT count(*) INTO result FROM mysql.user u
WHERE u.User = login;
IF result > 0 THEN
RETURN (TRUE);
ELSE
RETURN (FALSE);
END IF;
END$$
DELIMITER ;
